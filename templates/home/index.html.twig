{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="container-fluid p-5">

    <div class="row">
        <div class="col-12">
            <h2>Mes Projets</h2>
        </div>
    </div>

    <div class="row">
        {% for projet in projets %}
        {# {% if loop.index <= 6 %} enlevé car on a maintenant la méthode findSix() #} 
            <div class="col-4 p-3">
                <div class="card bg-dark">
                    {% if projet.lien is not null %}
                    <a href="http://{{ projet.lien }}" target="_blank"><img src="{{ asset('img/projet/' ~ projet.img) }}" class="card-img-top" alt="Photo {{ projet.nom }}"></a>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ projet.nom }}</h5>
                        <p class="card-text">{{ projet.description}}</p>
                        {% if projet.duree is not null %} <p class="card-text">Projet effectué en {{ projet.duree }} heures</p> {% endif %}
                        
                    </div>
                    <div class="card-body text-center">
                        {% if projet.sujet is not null %} 
                        <a href="http://{{ projet.sujet }}" target="_blank" class="btn btn-outline-light">Sujet</a> 
                        <a href="http://{{ projet.lien }}" target="_blank" class="btn btn-light col-10">Voir le site</a>
                        {% else %}
                        <a href="http://{{ projet.lien }}" target="_blank" class="btn btn-light col-12">Voir le site</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {# {% endif %} #}
        {% endfor %}
    </div>

    <div class="dropdown-divider"></div>

    <div class="row">
        <div class="col-12">
            <h2>Mes Compétences</h2>
        </div>
    </div>

</div>

{% endblock %}
