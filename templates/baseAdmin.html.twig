<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="site immobilier">
        <meta name="author" content="François BANITZ">

        <title>Portfolio - {% block title %}{% endblock %}</title>
        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
        <link rel="stylesheet" href="{{ asset('css/styleAdmin.css') }}">

        {% block stylesheets %}{% endblock %}

    </head>
    <body>
        <h1 class="text-center">François BANITZ</h1>
        <h2 class="text-center">Portfolio</h2>

        {% for label, messages in app.flashes(['success', 'danger']) %}
        {% for message in messages %}
            <div class="flash-{{ label }} bg-{{ label }} text-light p-3 mb-3 rounded">
                {{ message }}
            </div>
        {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}

        <footer class="container-fluid bg-dark">
            <div class="row text-center p-5">
                <div class="col-6">
                    <h5>{% trans %}QUELQUES LIENS{% endtrans %}</h5>
                    <div class="dropdown-divider"></div>
                    <ul>
                        <li><a href="{{ path('home') }}">{% trans %}Accueil{% endtrans %}</a></li>
                        <li><a href="#">{% trans %}Admin{% endtrans %}</a></li>
                        <li><a href="#">{% trans %}Contact{% endtrans %}</a></li>
                    </ul>
                    <div class="dropdown-divider"></div>
                    {% if is_granted('ROLE_USER') %}
                        <a href="#">{% trans %}Déconnexion{% endtrans %}</i></a>
                    {% else %}
                        <a href="#">{% trans %}Connexion{% endtrans %}</i></a>
                    {% endif %}
                </div>
                <div class="col-6">
                    <h5>{% trans %}COORDONNÉES{% endtrans %}</h5>
                    <div class="dropdown-divider"></div>
                    <p>5 rue contades</p>
                    <p>67300 SCHILTIGHEIM</p>
                    <p>06 88 99 14 38</p>
                    <p>banitz.francois@gmail.com</p>
                </div>
            </div>
            <div class="row copyright">
                <div class="col-12 text-center">
                    <p>{{ copyright|raw }}</p>
                </div>
            </div>
        </footer>
    
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    
        {% block javascripts %}{% endblock %}
    </body>
</html>
